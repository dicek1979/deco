  <div class="announcement">
  <div id="info" class="alert alert-info">
      <% cnt = 0 -%>
      <%- for announcement in @announcements -%>
      <%- cnt = cnt + 1 -%>
      <script type="text/javascript">
        announcement_body_flg_<%= cnt %> = 0;

        function display_<%= cnt %> () {
          if (announcement_body_flg_<%= cnt %> == 0) {
            $("#announcement_body_<%= cnt %>").css("display","block");
            
            announcement_body_flg_<%= cnt %> = 1;
          } else {
            announcement_body_flg_<%= cnt %> = 0;
            $("#announcement_body_<%= cnt %>").css("display","none");
          }
        }
      </script>

    <div id="announcement_title" onclick="display_<%= cnt %>()">
      <%= announcement.updated_at.strftime('%Y/%m/%d %H:%M') %>　<%= announcement.title %>
    </div>
    <br>
    <div id='announcement_body_<%= cnt %>' style="display:none;">
      <%= announcement.body %><br><br></div>
      <%- end -%>
      <%- if cnt == 0 -%>
        現在、お知らせはありません。<br>
      <%- end -%>
    </div>
  </div>


  <div class="row">
    <div class="span4">
      <div class="tile">
        <%= image_tag("images/mail.svg", :alt => "mail", class:"tile-image tile-image.big-illustration" ) %>
        <h3 class="tile-title">ファイルを送信する</h3>
        <p>ファイルを送るときに</p>
        <%= link_to("ファイルを送る", {:controller => "file_send", :action => "index"},  {:id => 'm1', class: "btn btn-primary btn-lg btn-block"}) %>
      </div>
    </div>

    <div class="span4 offset1" style="float: right;">
      <div class="tile">
        <%= image_tag("images/gift-box.svg", :alt => "mail", class:"tile-image tile-image.big-illustration" ) %>
        <h3 class="tile-title">ファイル送信を依頼する</h3>
        <p>ファイル送付を依頼するときに</p>
        <%= link_to("ファイルを依頼する", {:controller => "file_request", :action => "index"}, {:id => 'm2',class: "btn btn-primary btn-lg btn-block"}) %>
      </div>
    </div>
  </div> <!-- row /tiles -->


